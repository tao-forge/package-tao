<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE structures SYSTEM "../../tao/doc/structures.dtd">
<structures>
    <structure id="settings" name="Settings" level="11" group="invisible">
        <description>Manage Result Servers</description>
        <sections>
            <section id="manage_resultservers" name="Result Server Manager"
                     url="/taoResultServer/ResultServerMgt/index">
                <trees>
                    <tree name="Result Servers library"
                          className="Result Server"
                          dataUrl="/taoResultServer/ResultServerMgt/getResultServers"
                          selectClass="Edit class"
                          selectInstance="Edit result server"
                          moveInstance="Move"
                          delete="Delete" 
                     />
                </trees>
                <actions>

                    <action name="Edit class" url="/taoResultServer/ResultServerMgt/editResultServerClass" group="content" context="class">
                        <icon id="icon-edit"/>
                    </action>
                    <action name="Edit result server" url="/taoResultServer/ResultServerMgt/editResultServer" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action>
                    <action name="New class" js="subClass" url="/taoResultServer/ResultServerMgt/addResultServerClass" context="class" group="content">
                        <icon id="icon-folder-open"/>
                    </action>
                    <action name="New result server" js="instanciate" url="/taoResultServer/ResultServerMgt/addResultServer" context="class" group="content">
                        <icon id="icon-result-server"/>
                    </action>                    
                    <action name="Delete" js="removeNode" url="/taoResultServer/ResultServerMgt/delete" context="resource" group="tree">
                        <icon id="icon-bin"/>
                    </action>
                    <action name="Move" js="moveNode" url="" context="instance" group="tree">
                        <icon id="icon-move-item"/>
                    </action>
                    <action name="Migrate" url="/taoResultServer/ResultServerMgt/migrate" context="*" group="tree">
                        <icon id="icon-external"/>
                    </action>   
                </actions>
            </section>
        </sections>
    </structure>
</structures>
