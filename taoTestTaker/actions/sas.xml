<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE services SYSTEM "../../tao/doc/sas.dtd">
<services>
	<description>Subjects services</description>
	<service>
		<name>Subject class selection</name>
		<description>Select a subject (sub)class</description>
		<location url="/taoSubjects/SaSSubjects/sasSelect">
			<param key="selectInstance" value="false" />
		</location>
		<return>
			<param key="subjectClassUri" />
		</return>
	</service>
	<service>
		<name>Subject selection</name>
		<description>Select a subject</description>
		<location url="/taoSubjects/SaSSubjects/sasSelect">
			<param key="selectInstance" value="true" />
		</location>
		<return>
			<param key="subjectClassUri" />
			<param key="subjectUri" />
		</return>
	</service>
	<service>
		<name>Subject add</name>
		<description>Add a new subject and redirect to the edit form</description>
		<location url="/taoSubjects/SaSSubjects/sasAddInstance">
			<param key="classUri" value="^subjectClassUri" />
		</location>
		<return>
			<param key="subjectUri" />
		</return>
	</service>
	<service>
		<name>Subject editor</name>
		<description>Edit subject properties</description>
		<location url="/taoSubjects/SaSSubjects/sasEditInstance">
			<param key="uri" value="^subjectUri" />
			<param key="classUri" value="^subjectClassUri" />
		</location>
	</service>
	<service>
		<name>Subject full editor</name>
		<description>Full edit form: edit subject properties, select subject's group</description>
		<location url="/taoSubjects/SaSSubjects/editSubject">
			<param key="uri" value="^subjectUri" />
			<param key="classUri" value="^subjectClassUri" />
		</location>
	</service>
	<service>
		<name>Subject class editor</name>
		<description>Edit a Subject (sub)class: add/edit/delete class properties</description>
		<location url="/taoSubjects/SaSSubjects/editSubjectClass">
			<param key="classUri" value="^subjectClassUri" />
		</location>
	</service>
	<service>
		<name>Subject translation</name>
		<description>Translate the value of the subject properties</description>
		<location url="/taoSubjects/SaSSubjects/translateInstance">
			<param key="uri" value="^subjectUri" />
			<param key="classUri" value="^subjectClassUri" />
			<param key="target_lang" value="^subjectTargetLang" />
		</location>	
	</service>
	<service>
		<name>Subject's group selection</name>
		<description>Select the subject's group</description>
		<location url="/taoSubjects/SaSSubjects/addToGroup">
			<param key="uri" value="^subjectUri" />
			<param key="classUri" value="^subjectClassUri" />
		</location>
	</service>
	<service>
		<name>Subjects searching</name>
		<description>Search subject instances</description>
		<location url="/taoSubjects/SaSSubjects/search" />
		<return>
			<param key="subjectUris" />
		</return>
	</service>	
	<service>
		<name>Subject removing</name>
		<description>Delete a subject</description>
		<location url="/taoSubjects/SaSSubjects/sasDeleteInstance">
			<param key="uri" value="^subjectUri" />
			<param key="classUri" value="^subjectClassUri" />
		</location>
	</service>
</services>