<?xml version="1.0" encoding="utf-8"?>
<extension name="Items" url="/taoItems/Items/index" level="0">
	<sections>
		<section name="Manage items" url="/taoItems/Items/index">
			<trees>
				<tree name="Item library" 
					dataUrl="/taoItems/Items/getItems" 
					editClassUrl="/taoItems/Items/editItemClass"
					editInstanceUrl="/taoItems/Items/editItem"
					addInstanceUrl="/taoItems/Items/addItem"
					addSubClassUrl="/taoItems/Items/addItemClass"
					deleteUrl="/taoItems/Items/delete"
					duplicateUrl="/taoItems/Items/cloneItem"
				/>
			</trees>
			<actions>
				<action name="new class" js="subClass" url="/taoItems/Items/addItemClass" context="class" />
				<action name="new item" js="instanciate" url="/taoItems/Items/addItem" context="class" />
				<action name="delete" js="removeNode" url="/taoItems/Items/delete" context="resource" />
				<action name="duplicate" js="cloneNode" url="/taoItems/Items/cloneItem" context="instance" />
				<action name="edit item" url="/taoItems/Items/editItem" context="instance" />
				<action name="fullscreen preview" js="fullScreen" url="/taoItems/Items/preview" context="instance" />
				<action name="import" url="/taoItems/Items/import" context="*" />
				<action name="export" url="/taoItems/Items/export" context="*" />
			</actions>
		</section>
		<section name="Item authoring" url="/taoItems/Items/authoring">
			<actions />
		</section>
	</sections>
</extension>