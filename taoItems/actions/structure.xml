				<tree name="item profiles" 
					dataUrl="/taoItems/ItemsEditor/getItems" 
					editClassUrl="/taoItems/ItemsEditor/editItemClass"
					editInstanceUrl="/taoItems/ItemsEditor/editItem"
					addInstanceUrl="/taoItems/ItemsEditor/addItem"
					addSubClassUrl="/taoItems/ItemsEditor/addItemClass"
					deleteUrl="/taoItems/ItemsEditor/delete"
					duplicateUrl="/taoItems/ItemsEditor/cloneItem"
					gridUrl="/taoItems/ItemsEditor/getItemHistoryGrid"
				/>
			</trees>
			<actions>
				<action name="import items" url="/taoItems/ItemsEditor/import" />
				<action name="export items" url="/taoItems/ItemsEditor/import" />
			</actions>
		</section>
	</sections>
</extension>