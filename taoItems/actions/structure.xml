<?xml version="1.0" encoding="utf-8"?>
<extension name="Items Managment" url="/taoItems/Items/index">
	<sections>
		<section name="manage items" url="/taoItems/Items/index">
			<trees>
				<tree name="item library" 
					dataUrl="/taoItems/Items/getItems" 
					editClassUrl=""
					editInstanceUrl="/taoItems/Items/editItem"
					addInstanceUrl=""
					addSubClassUrl=""
					deleteUrl="/taoItems/Items/delete"
					duplicateUrl="/taoItems/Items/cloneItem"
					gridUrl="/taoItems/Items/getItemHistoryGrid"
				/>
			</trees>
			<actions>
				<action name="import items" url="/taoItems/Items/import" />
				<action name="export items" url="/taoItems/Items/import" />
				<action name="preview full screen" url="/taoItems/Items/import" />
			</actions>
		</section>
		<section name="edit items" url="/taoItems/ItemsEditor/index">
