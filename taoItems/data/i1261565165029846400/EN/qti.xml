	xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqti_v2p0 http://www.imsglobal.org/xsd/imsqti_v2p0.xsd"
	identifier="periods-of-history" title="Periods of History" adaptive="false" timeDependent="false">
	<responseDeclaration identifier="RESPONSE" cardinality="ordered" baseType="identifier">
		<correctResponse>
			<value>Prehistory</value>
			<value>Antiquity</value>
			<value>MiddleAges</value>
			<value>ModernEra</value>
			<value>ContemporaryEra</value>
		</correctResponse>
	</responseDeclaration>
	<outcomeDeclaration identifier="SCORE" cardinality="single" baseType="integer"/>
	<stylesheet href="style.css" type="text/css" media="screen" title="Periods of History"/>
	<itemBody id="itemBody">
		<p id="stimulus">
			The history of mankind is an unfailing source of inspiration for every human being. But before knowing in-depth
			the history of the world, you should know its major periods.
		</p>
		<orderInteraction id="interaction" responseIdentifier="RESPONSE" shuffle="true">
			<prompt id="prompt">
				Use your mouse to drag and drop periods of history in the correct order, from the 
				top to the bottom of the screen. When your answer is correctly set, click the <i>Validate</i>
				button.
			</prompt>
			<simpleChoice id="Prehistory" identifier="Prehistory">Prehistory</simpleChoice>
			<simpleChoice id="Antiquity" identifier="Antiquity">Antiquity</simpleChoice>
			<simpleChoice id="MiddleAges" identifier="MiddleAges">Middle Ages</simpleChoice>
			<simpleChoice id="ModernEra" identifier="ModernEra">Modern Era</simpleChoice>
			<simpleChoice id="ContemporaryEra" identifier="ContemporaryEra">Contemporary Era</simpleChoice>
		</orderInteraction>
	</itemBody>
	<responseProcessing template="http://www.imsglobal.org/question/qti_v2p0/rptemplates/match_correct"/>
