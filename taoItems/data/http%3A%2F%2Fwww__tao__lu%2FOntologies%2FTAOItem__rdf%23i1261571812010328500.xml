<black:manifest xmlns:tao="http://www.tao.lu/tao.rdfs#" xmlns:rdfs="http://www.w3.org/TR/1999/PR-rdf-schema-19990303#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:black="http://www.exulis.lu/black.rdfs#">
    <black:business>
        <tao:settings>
            <rdfs:label lang="EN">
                <![CDATA[ Computer Software Knowledge Test ]]>
            </rdfs:label>
            <rdfs:comment lang="EN">
                <![CDATA[ Computer Software Knowledge Test on Development Methods ]]>
            </rdfs:comment>
            <tao:duration>
                <![CDATA[ 120 ]]>
            </tao:duration>
        </tao:settings>
        <tao:items>
            <tao:item order="1" id="ITEM_UID_1">
                <tao:questionmaterial datasource="xpath:////layout//label[@id='ITEM1_QM']/@textContent">
                </tao:questionmaterial>
                <!-- AND, OR, XOR, ORX, MNF, M -->
                <!-- MNF_2 "minimum not" fail 2 good answers -->
                <!-- M_2 minimum 2 good answers -->
                <tao:itemrule>
                    <![CDATA[ AND ]]>
                </tao:itemrule>
                <tao:hasguide>
                </tao:hasguide>
                <tao:setvalues>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM1_PROP_UID_1']/@selected" order="1">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM1_PROP_UID_2']/@selected" order="2">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM1_PROP_UID_3']/@selected" order="3">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM1_PROP_UID_4']/@selected" order="4">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM1_PROP_UID_5']/@selected" order="5">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM1_PROP_UID_6']/@selected" order="6">
                    </tao:setvalue>
                </tao:setvalues>
                <tao:expectedvalues>
                    <!-- Functions of the scoring method the expected value could be wrote in string -->
                    <tao:expectedvalue>
                        <![CDATA[ 000010 ]]>
                    </tao:expectedvalue>
                </tao:expectedvalues>
            </tao:item>
            <tao:item order="2" id="ITEM_UID_2">
                <tao:questionmaterial datasource="xpath:////layout//label[@id='ITEM2_QM']/@textContent">
                </tao:questionmaterial>
                <tao:itemrule>
                    <![CDATA[ AND ]]>
                </tao:itemrule>
                <tao:hasguide>
                </tao:hasguide>
                <tao:setvalues>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM2_PROP_UID_1']/@selected" order="1">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//radio[@id='ITEM2_PROP_UID_2']/@selected" order="2">
                    </tao:setvalue>
                </tao:setvalues>
                <tao:expectedvalues>
                    <tao:expectedvalue>
                        <![CDATA[ 01 ]]>
                    </tao:expectedvalue>
                </tao:expectedvalues>
            </tao:item>
            <tao:item order="3" id="ITEM_UID_3">
                <tao:questionmaterial datasource="xpath:////layout//label[@id='ITEM3_QM']/@textContent">
                </tao:questionmaterial>
                <tao:itemrule>
                    <![CDATA[ AND ]]>
                </tao:itemrule>
                <tao:hasguide>
                </tao:hasguide>
                <tao:setvalues>
                    <tao:setvalue datasource="xpath:////layout//checkbox[@id='ITEM3_PROP_UID_1']/@checked" order="1">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//checkbox[@id='ITEM3_PROP_UID_2']/@checked" order="2">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//checkbox[@id='ITEM3_PROP_UID_3']/@checked" order="3">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//checkbox[@id='ITEM3_PROP_UID_4']/@checked" order="4">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//checkbox[@id='ITEM3_PROP_UID_5']/@checked" order="5">
                    </tao:setvalue>
                    <tao:setvalue datasource="xpath:////layout//checkbox[@id='ITEM3_PROP_UID_6']/@checked" order="6">
                    </tao:setvalue>
                </tao:setvalues>
                <tao:expectedvalues>
                    <tao:expectedvalue>
                        <![CDATA[ 000010 ]]>
                    </tao:expectedvalue>
                </tao:expectedvalues>
            </tao:item>
        </tao:items>
    </black:business>
    <black:layout>
        <xul:window id="myBlackWindow" xmlns:rdfs="http://www.w3.org/TR/1999/PR-rdf-schema-19990303#" xmlns:auth="http://www.tao.lu/waterphoenix.rdfs#" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" xmlns:tao="http://www.tao.lu/tao.rdfs#" xmlns:html="http://www.w3.org/1999/xhtml">
            <hbox width="800" height="600" style="overflow: auto;">
                <hbox flex="1">
                    <xul:spacer width="15">
                    </xul:spacer>
                    <box pack="center" orient="vertical">
                        <xul:image width="150" src="/filemanager/views/data/hawai_images/waterfall.png">
                        </xul:image>
                    </box>
                    <xul:spacer width="15">
                    </xul:spacer>
                    <vbox flex="1">
                        <hbox pack="center">
                            <description id="UNIT_STIMULUS_LABEL_UID1" style="font-size: 18px; font-weight: bold;">
                                <![CDATA[ How to develop with Waterfall Processes ? ]]>
                            </description>
                        </hbox>
                        <xul:spacer height="35">
                        </xul:spacer>
                        <xul:label style="font-weight: bold; color: red;">
                            <![CDATA[ Item 1 ]]>
                        </xul:label>
                        <xul:groupbox id="ITEM1" orient="horizontal">
                            <description style="font-style: italic;" width="325" id="ITEM1_QM">
                                <![CDATA[ In which Phase do you validate your development ? ]]>
                            </description>
                            <xul:box flex="1">
                            </xul:box>
                            <radiogroup>
                                <radio id="ITEM1_PROP_UID_1" label="Requirements specification Phase">
                                </radio>
                                <radio id="ITEM1_PROP_UID_2" label="Design Phase">
                                </radio>
                                <radio id="ITEM1_PROP_UID_3" label="Implementation Phase">
                                </radio>
                                <radio id="ITEM1_PROP_UID_4" label="Integration Phase">
                                </radio>
                                <radio id="ITEM1_PROP_UID_5" label="Testing and Debugging Phase">
                                </radio>
                                <radio id="ITEM1_PROP_UID_6" label="Installation and Maintenance">
                                </radio>
                            </radiogroup>
                        </xul:groupbox>
                        <xul:spacer height="15">
                        </xul:spacer>
                        <xul:label style="font-weight: bold; color: green;">
                            <![CDATA[ Item 2 ]]>
                        </xul:label>
                        <xul:groupbox orient="horizontal" id="ITEM2">
                            <description style="font-style: italic;" width="325" id="ITEM2_QM">
                                <![CDATA[ Does WaterFall model suit to development where requirements are not well understood or are likely to change in the course of the project ? ]]>
                            </description>
                            <radiogroup flex="1">
                                <radio id="ITEM2_PROP_UID_1" label="true">
                                </radio>
                                <radio id="ITEM2_PROP_UID_2" label="false">
                                </radio>
                            </radiogroup>
                        </xul:groupbox>
                        <!-- ********************************************* ITEM 1 layout definition RADIOBUTTON Example ********************************************* -->
                        <!-- ********************************************* ITEM 2 layout definition RADIOBUTTON Example ********************************************* -->
                        <!-- ********************************************* ITEM 3 layout definition CHECKBOX Example ********************************************* -->
                        <xul:spacer height="15">
                        </xul:spacer>
                        <xul:label style="font-weight: bold; color: orange;">
                            <![CDATA[ Item 3 ]]>
                        </xul:label>
                        <xul:groupbox orient="horizontal" id="ITEM3">
                            <description style="font-style: italic;" width="325" id="ITEM3_QM">
                                <![CDATA[ Which type of testing focuses on finding defects after a major code change has occurred. ]]>
                            </description>
                            <box orient="vertical">
                                <checkbox id="ITEM3_PROP_UID_1" label="Beta testing">
                                </checkbox>
                                <checkbox id="ITEM3_PROP_UID_2" label="Acceptance testing">
                                </checkbox>
                                <checkbox id="ITEM3_PROP_UID_3" label="Unit Testing">
                                </checkbox>
                                <checkbox id="ITEM3_PROP_UID_4" label="Integration Testing">
                                </checkbox>
                                <checkbox id="ITEM3_PROP_UID_5" label="Regression Testing">
                                </checkbox>
                                <checkbox id="ITEM3_PROP_UID_6" label="System Testing">
                                </checkbox>
                            </box>
                        </xul:groupbox>
                    </vbox>
                </hbox>
            </hbox>
        </xul:window>
    </black:layout>
    <black:action>
    </black:action>
    <black:content>
    </black:content>
    <black:knowledge>
    </black:knowledge>
</black:manifest>
