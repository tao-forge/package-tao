<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE structures SYSTEM "../doc/structures.dtd">
<structures>
	<structure id="taoBo_structures" name="Structures" level="15" group="main">
		<description>Structured meta-data</description>
		<icon id="icon-ul"/>
		<sections>
			<section id="taoBo_list" name="Lists" url="/taoBackOffice/Lists/index" />
			<section id="taoBo_tree" name="Trees" url="/taoBackOffice/Trees/viewTree">
                <trees>
                    <tree name="Trees"
                          className="Trees"
                          dataUrl="/taoBackOffice/Trees/getTreeData"
                          selectInstance="tree-view"
                          delete="test-delete"
                          rootNode="http://www.tao.lu/Ontologies/TAO.rdf#Tree"
                        />
                </trees>
                <actions>
                    <action id="tree-view"  name="View Tree"  url="/taoBackOffice/Trees/viewTree" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action>
                    <action id="test-delete" name="Delete" url="/taoTests/Tests/delete" context="resource" group="tree" binding="removeNode">
                        <icon id="icon-bin"/>
                    </action>
                    <action id="test-import" name="Import" url="/tao/Import/index" context="resource" group="tree" binding="loadClass">
                        <icon id="icon-import"/>
                    </action>
                    <action id="test-export" name="Export" url="/tao/Export/index" context="instance" group="tree">
                        <icon id="icon-export"/>
                    </action>
                </actions>
			</section>
		</sections>
	</structure>
</structures>