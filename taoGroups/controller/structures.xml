<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE structures SYSTEM "../../tao/doc/structures.dtd">
<structures>
    <structure id="groups" name="Groups" level="3" group="main">
        <description>Group test takers according to global features and classifications.</description>
        <icon id="icon-test-takers" src=""/>
        <sections>
            <section id="manage_groups" name="Manage groups" url="/taoGroups/Groups/index">
                <trees>
                    <tree name="Groups library"
                          className="Group"
                          dataUrl="/taoGroups/Groups/getOntologyData"
                            selectClass="Edit class"
                            selectInstance="Edit group"
                            moveInstance="Move"
                            delete="Delete" 
                            />
                </trees>
                <actions>
                	  <action name="Edit class" url="/taoGroups/Groups/editGroupClass" group="content" context="class">
                        <icon id="icon-edit"/>
                    </action>
                    <action name="Edit group"  url="/taoGroups/Groups/editGroup" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action> 

                    <action name="Filter" context="*" group="search" binding="filter">
                        <icon id="icon-filter"/>
                    </action>
                    <action name="Search" url="/taoGroups/Groups/search" context="*" group="search" binding="launchFinder">
                        <icon id="icon-find"/>
                    </action>
                    <action name="New class" url="/taoGroups/Groups/addSubClass" context="class" group="content" binding="subClass">
                        <icon id="icon-folder-open"/>
                    </action>
                    <action name="New group" url="/taoGroups/Groups/addInstance" context="class" group="content" binding="instanciate">
                        <icon id="icon-users"/>
                    </action>
                    <action name="Delete" url="/taoGroups/Groups/delete" context="resource" group="tree" binding="removeNode">
                        <icon id="icon-bin"/>
                    </action>
                    <action name="Duplicate" url="/taoGroups/Groups/cloneInstance" context="instance" group="tree" binding="duplicateNode">
                        <icon id="icon-copy"/>
                    </action>
                    <action name="Move" url="" context="instance" group="tree" binding="gmoveNode">
                        <icon id="icon-move-item"/>
                    </action>
                    <action name="Lists" url="/tao/Lists/index" context="*" group="tree">
                        <icon id="icon-ul"/>
                    </action>
                    <action name="Export" url="/tao/Export/index" context="resource" group="content">
                        <icon id="icon-export"/>
                    </action>
                    <action name="Import" url="/tao/Import/index" context="class" group="content">
                        <icon id="icon-import"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>
</structures>
