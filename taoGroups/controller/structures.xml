<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension SYSTEM "../../tao/doc/structures.dtd">
<structures>
    <structure id="groups" name="Groups" level="3" visible="true">
        <description>Group test takers according to global features and classifications.</description>
        <icon id="icon-test-takers" src=""/>
        <sections>
            <section id="manage_groups" name="Manage groups" url="/taoGroups/Groups/index">
                <trees>
                    <tree name="Groups library"
                          className="Group"
                          dataUrl="/taoGroups/Groups/getOntologyData"
                          editClassUrl="/taoGroups/Groups/editGroupClass"
                          editInstanceUrl="/taoGroups/Groups/editGroup"
                          addInstanceUrl="/taoGroups/Groups/addInstance"
                          addSubClassUrl="/taoGroups/Groups/addSubClass"
                          deleteUrl="/taoGroups/Groups/delete"
                          duplicateUrl="/taoGroups/Groups/cloneInstance"
                          moveInstanceUrl="/taoGroups/Groups/moveInstance"
                            />
                </trees>
                <actions>
                    <action name="Search" url="/taoGroups/Groups/search" context="*" group="filter">
                        <icon id="icon-find" src=""/>
                    </action>
                    <action name="New class" js="subClass" url="/taoGroups/Groups/addSubClass" context="class" group="content">
                        <icon id="icon-folder-open"/>
                    </action>
                    <action name="New group" js="instanciate" url="/taoGroups/Groups/addInstance" context="class" group="content">
                        <icon id="icon-users"/>
                    </action>
                    <action name="Delete" js="removeNode" url="/taoGroups/Groups/delete" context="resource" group="tree">
                        <icon id="icon-eraser"/>
                    </action>
                    <action name="Duplicate" js="duplicateNode" url="/taoGroups/Groups/cloneInstance" context="instance" group="tree">
                        <icon id="icon-copy"/>
                    </action>
                    <action name="Move" js="gmoveNode" url="" context="instance" group="tree">
                        <icon id="icon-move-item"/>
                    </action>
                    <action name="Lists" url="/tao/Lists/index" context="*" group="tree">
                        <icon id="icon-ul"/>
                    </action>
                    <action name="Metadata" js="loadMetaData" url="/tao/MetaData/getMetaData" context="resource" group="tree">
                        <icon id="icon-meta-data"/>
                    </action>
                    <action name="Export" url="/tao/Export/index" context="resource" group="content">
                        <icon id="icon-export"/>
                    </action>
                    <action name="Import" url="/tao/Import/index" context="class" group="content">
                        <icon id="icon-import"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>
</structures>