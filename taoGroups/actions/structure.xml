				<action name="duplicate" js="GenerisAction.duplicateNode" url="/taoGroups/Groups/cloneInstance" context="instance" />
				<action name="edit group" url="/taoGroups/Groups/editGroup" context="instance" />
				<action name="move" js="GenerisAction.moveNode" url="" context="instance" />
				<action name="new property" js="GenerisAction.addProperty" url="/taoGroups/Groups/addClassProperty" context="class" />
				<action name="lists"  url="/tao/Lists/index"  context="*" />
				<action name="meta data" js="GenerisAction.loadMetaData" url="/taoGroups/Groups/getMetaData"  context="instance" />
				<action name="create table" js="GenerisAction.resultTable" url="/taoResults/Results/createTable"  context="class" />
				<action name="export" url="/taoGroups/Groups/export"  context="*" />
			</actions>
		</section>
	</sections>
</extension>