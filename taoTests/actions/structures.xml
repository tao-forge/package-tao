<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE structures SYSTEM "../../tao/doc/structures.dtd">
<structures>
    <structure id="tests" name="Tests" level="1" group="main">
        <description>Combine a selection of items into tests.</description>
        <icon id="icon-test" src=""/>
        <sections>
            <section id="manage_tests" name="Manage tests" url="/taoTests/Tests/index">
                <trees>
                    <tree name="Tests library"
                          className="Test"
                          dataUrl="/taoTests/Tests/getOntologyData"
                          editClassUrl="/taoTests/Tests/editTestClass"
                          editInstanceUrl="/taoTests/Tests/editTest"
                          addInstanceUrl="/taoTests/Tests/addInstance"
                          addSubClassUrl="/taoTests/Tests/addSubClass"
                          deleteUrl="/taoTests/Tests/delete"
                          duplicateUrl="/taoTests/Tests/cloneInstance"
                          moveInstanceUrl="/taoTests/Tests/moveInstance"
                            />
                </trees>
                <actions>
                	
                	  <action name="Edit class" url="/taoTests/Tests/editTestClass" group="content" context="class">
                        <icon id="icon-edit"/>
                    </action>
                    <action name="Edit test"  url="/taoTests/Tests/editTest" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action>
                    
                    <action name="Filter" context="*" group="search" binding="filter">
                        <icon id="icon-filter"/>
                    </action> 
                    <action name="Search" url="/taoTests/Tests/search" context="*" group="search" binding="launchFinder">
                        <icon id="icon-find"/>
                    </action> 
                    <action name="New class" js="subClass" url="/taoTests/Tests/addSubClass" context="class" group="content">
                        <icon id="icon-folder-open"/>
                    </action>
                    <action name="New test" url="/taoTests/Tests/addInstance" context="class" group="content" binding="instanciate">
                        <icon id="icon-test"/>
                    </action>
                    <action name="Delete" url="/taoTests/Tests/delete" context="resource" group="tree" binding="removeNode">
                        <icon id="icon-bin"/>
                    </action>
                    <action name="Duplicate" js="duplicateNode" url="/taoTests/Tests/cloneInstance" context="instance" group="tree">
                        <icon id="icon-copy"/>
                    </action>
                    <action name="Move" url="" context="instance" group="tree" binding="moveNode">
                        <icon id="icon-move-item"/>
                    </action>
                    <action name="Lists" url="/tao/Lists/index" context="*" group="tree">
                        <icon id="icon-ul"/>
                    </action>
                    <action name="Export" url="/taoTests/TestExport/index" context="resource" group="content">
                        <icon id="icon-export"/>
                    </action>
                    <action name="Import" url="/taoTests/TestImport/index" context="class" group="content">
                        <icon id="icon-import"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>
</structures>
