<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension SYSTEM "../doc/structures.dtd">
<structures>
    <structure id="users" name="Users" level="11" visible="true" group="settings">
        <description/>
        <icon id="icon-users" src=""/>
        <sections>
            <section id="list_users" name="Manage users" url="/tao/Users/index"/>
            <section id="add_user" name="Add a user" url="/tao/Users/add"/>
            <section id="edit_user" name="Edit a user" url="/tao/Users/edit"/>
            <section id="manage_roles" name="Manage roles" url="/tao/Roles/index">
                <trees>
                    <tree name="Roles library"
                          className="Role"
                          dataUrl="/tao/Roles/getOntologyData"
                          editInstanceUrl="/tao/Roles/editRole"
                          addInstanceUrl="/tao/Roles/addInstance"
                          deleteUrl="/tao/Roles/delete"
                          editClassUrl="/tao/Roles/editRoleClass"
                            />
                </trees>
                <actions>
                    <action name="Search" url="/tao/Roles/search" context="*" group="filter">
                        <icon id="icon-find" src=""/>
                    </action>
                    <action name="New role" js="instanciate" url="/tao/Roles/addInstance" context="class" group="bar">
                        <icon id="icon-tools" src=""/>
                    </action>
                    <action name="Delete" js="removeNode" url="/tao/Roles/delete" context="resource" group="tree">
                        <icon id="icon-eraser"/>
                    </action>
                    <action name="Metadata" js="loadMetaData" url="/tao/MetaData/getMetaData" context="resource" group="tree">
                        <icon id="icon-meta-data"/>
                    </action>
                    <action name="Export" url="/tao/Export/index" context="resource" group="content">
                        <icon id="icon-export"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>

    <structure id="settings" name="Settings" level="8" visible="false" group="settings">
        <description/>
        <icon id="icon-tools" src=""/>
        <sections>
            <section id="settings_ext_mng" name="Extensions manager" url="/tao/ExtensionsManager/index"/>
            <section id="settings_im_export" name="Ontology" url="/tao/RdfImExport/index"/>
            <section id="settings_versioning" name="File sources" url="/tao/SettingsVersioning/index">
                <trees>
                    <tree name="File sources"
                          className="Repository"
                          dataUrl="/tao/SettingsVersioning/getOntologyData"
                          editClassUrl="/tao/SettingsVersioning/index"
                          editInstanceUrl="/tao/SettingsVersioning/editRepository"
                          addInstanceUrl="/tao/SettingsVersioning/addInstance"
                          deleteUrl="/tao/SettingsVersioning/delete"
                            />
                </trees>
                <actions>
                    <action name="Add repository" js="instanciate" url="/tao/SettingsVersioning/addInstance" context="class" group="tree">
                        <icon id="icon-add-repository"/>
                    </action>
                    <action name="Remove repository" js="removeNode" url="/tao/SettingsVersioning/delete" context="instance" group="tree">
                        <icon id="icon-remove-repository"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>

    <structure id="user_settings" name="User Settings" level="110" visible="false" group="settings">
        <description/>
        <icon id="icon-user" src=""/>
        <sections>
            <section id="settings_my_settings" name="My settings" url="/tao/UserSettings/properties"/>
            <section id="settings_my_password" name="Change password" url="/tao/UserSettings/password"/>
        </sections>
    </structure>

    <entrypoint id="backoffice" title="Test Developers and Administrators" label="TAO Back Office" url="tao/Main/index">
        <description>
            <![CDATA[Create items, manage item and test banks, organize cohorts and deliveries, prepare reports, set up workflows.]]></description>
    </entrypoint>
</structures>