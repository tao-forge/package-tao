<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE structures SYSTEM "../doc/structures.dtd">
<structures>
    <structure id="users" name="Users" level="11" group="settings">
        <description/>
        <icon id="icon-users" src=""/>
        <sections>
            <section id="list_users" name="Manage users" url="/tao/Users/index"/>
            <section id="add_user" name="Add a user" url="/tao/Users/add"/>
            <section id="edit_user" name="Edit a user" url="/tao/Users/edit"/>
            <section id="manage_roles" name="Manage roles" url="/tao/Roles/index">
                <trees>
                    <tree name="Roles library"
                          className="Role"
                          dataUrl="/tao/Roles/getOntologyData"
                          selectClass="Edit class"
                          selectInstance="Edit group"
                          moveInstance="Move"
                          delete="Delete"
                            />
                </trees>
                <actions>
                	<action name="Edit class" url="/tao/Roles/editRoleClass" group="content" context="class">
                        <icon id="icon-edit"/>
                    </action>
                    <action name="Edit group"  url="/tao/Roles/editRole" group="content" context="instance">
                        <icon id="icon-edit"/>
                    </action>
                    <action name="Filter" context="*" group="search" binding="launchFinder">
                        <icon id="icon-filter"/>
                    </action>
                    <action name="Search" url="/tao/Roles/search" context="*" group="search" binding="launchFinder">
                        <icon id="icon-find"/>
                    </action>
                    <action name="New role" url="/tao/Roles/addInstance" context="class" group="bar" binding="instanciate">
                        <icon id="icon-tools" src=""/>
                    </action>
                    <action name="Delete" url="/tao/Roles/delete" context="resource" group="tree" binding="removeNode">
                        <icon id="icon-bin"/>
                    </action>
                    <action name="Export" url="/tao/Export/index" context="resource" group="content">
                        <icon id="icon-export"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>

    <structure id="settings" name="Settings" level="8" group="settings">
        <description/>
        <icon id="icon-tools" src=""/>
        <sections>
            <section id="settings_ext_mng" name="Extensions manager" url="/tao/ExtensionsManager/index"/>
            <section id="settings_im_export" name="Ontology" url="/tao/RdfImExport/index"/>
            <section id="settings_versioning" name="File sources" url="/tao/SettingsVersioning/index">
                <trees>
                    <tree name="File sources"
                          className="Repository"
                          dataUrl="/tao/SettingsVersioning/getOntologyData"
                          editClassUrl="/tao/SettingsVersioning/index"
                          editInstanceUrl="/tao/SettingsVersioning/editRepository"
                          addInstanceUrl="/tao/SettingsVersioning/addInstance"
                          deleteUrl="/tao/SettingsVersioning/delete"
                            />
                </trees>
                <actions>
                    <action name="Add repository" url="/tao/SettingsVersioning/addInstance" context="class" group="tree" binding="instanciate">
                        <icon id="icon-add-repository"/>
                    </action>
                    <action name="Remove repository" url="/tao/SettingsVersioning/delete" context="instance" group="tree" binding="removeNode">
                        <icon id="icon-remove-repository"/>
                    </action>
                </actions>
            </section>
        </sections>
    </structure>

    <structure id="user_settings" name="User Settings" level="110" group="settings">
        <description/>
        <icon id="icon-user" src=""/>
        <sections>
            <section id="settings_my_settings" name="My settings" url="/tao/UserSettings/properties"/>
            <section id="settings_my_password" name="Change password" url="/tao/UserSettings/password"/>
        </sections>
    </structure>

    <entrypoint id="backoffice" title="Test Developers and Administrators" label="TAO Back Office" url="tao/Main/index">
        <description>
            <![CDATA[Create items, manage item and test banks, organize cohorts and deliveries, prepare reports, set up workflows.]]></description>
    </entrypoint>
</structures>
